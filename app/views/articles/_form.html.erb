<%= simple_form_for(@article) do |f| %>
  <div class="row justify-content-center">
    <%= f.error_notification %>
  </div>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
  </div>

  <div class="form-actions row justify-content-center">
  	<div class="col-md-4">
  		 <%= f.button :submit %>
  	</div>
  </div>
<% end %>
