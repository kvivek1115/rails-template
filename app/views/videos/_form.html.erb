<%= simple_form_for(@video, url: videos_create_path) do |f| %>
  <div class="row justify-content-center">
    <%= f.error_notification %>
  </div>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :video_url %>
  </div>

  <div class="form-actions row justify-content-center">
  	<div class="col-md-4">
  		 <%= f.button :submit %>
  	</div>
  </div>
<% end %>
