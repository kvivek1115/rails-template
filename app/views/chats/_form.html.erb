<%= simple_form_for(@chat) do |f| %>
  <div class="row justify-content-center">
    <%= f.error_notification %>
  </div>
  <div class="form-inputs">
    <%= f.input :chat_to %>
    <%= f.hidden_field :chat_from, value: current_user.id %>
    <%= f.input :msg %>
    <%= f.input :msg_type %>
  </div>

  <div class="form-actions row justify-content-center">
  	<div class="col-md-4">
  		 <%= f.button :submit %>
  	</div>
  </div>
<% end %>
